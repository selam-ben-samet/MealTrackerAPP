@model MealTrackerAPP.Models.WaterIntakeEditViewModel

<div class="container">
    <h2>Su Kaydını Düzenle</h2>
    <form asp-action="EditWater" method="post">
        <div class="form-group">
            <label for="Amount">Miktar</label>
            <input type="text" class="form-control" id="Amount" name="Amount" value="@Model.Amount" required />
        </div>
        <div class="form-group">
            <label for="Datetime">Tarih ve Saat</label>
            <input type="datetime-local" class="form-control" id="Datetime" name="Datetime"
                value="@Model.Datetime?.ToString("yyyy-MM-ddTHH:mm")" />
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
</div>
