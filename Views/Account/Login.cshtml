@model MealTrackerAPP.Models.LoginViewModel

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 25rem;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Giriş Yap</h2>
            <form asp-action="Login">
                <div class="form-group mb-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input asp-for="Username" class="form-control" placeholder="Kullanıcı adı" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input asp-for="Password" class="form-control" placeholder="Şifre" type="password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
                </div>
            </form>
            <div class="text-center mt-4">
                <a asp-area="" asp-controller="Account" asp-action="Register" class="text-decoration-none">Hesabınız yok mu?</a>
            </div>
        </div>
    </div>
</div>
